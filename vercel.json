{
  "version": 2,
  "builds": [
    {
      "src": "API/index.ts",
      "use": "@vercel/node",
      "config": { "includeFiles": ["API/**/*.ts"] }
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/API/index.ts" },
    { "src": "/(.*)", "dest": "/client/dist/$1" }
  ]
}
