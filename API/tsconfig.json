{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "." // Update to "." to consider the whole API directory
  },
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": ["node_modules"]
}
